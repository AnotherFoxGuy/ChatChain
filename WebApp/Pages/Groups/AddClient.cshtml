@page
@model AddClientModel
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>Add Client to group @Model.Group.GroupName</h2>

    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="col-md-8">
                    @Html.Hidden("id", Model.Group.Id)
                    @Html.DropDownListFor(model => model.Input.ClientId, new SelectList(Model.Clients, "Value", "Text"), htmlAttributes: new {@class = "form-control", id = "Client"})
                    @Html.ValidationMessageFor(model => model.Input.ClientId, "", new {@class = "text-danger"})
                    <br/>
                    <input type="submit" value="Add" class="btn btn-success"/>
                    <a asp-page="./Clients" asp-route-id="@Model.Group.Id.ToString()" class="btn btn-danger">Back to List</a>
                </div>
            </form>
        </div>
    </div>

    <div>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}